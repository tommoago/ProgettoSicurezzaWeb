<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.its.carrello"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.its.carrello.ProductsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.its.carrello.ProductsCartActivity"
            android:label="@string/title_activity_carrello" >
        </activity>
        <activity
            android:name="com.its.carrello.ProductsDetailsActivity"
            android:label="@string/title_activity_details_produtct" >
        </activity>
        <activity
            android:name="com.its.carrello.HomePageActivity"
            android:label="@string/title_activity_home_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.its.carrello.MainPageActivity"
            android:label="@string/title_activity_main_page" >
        </activity>
    </application>

</manifest>
